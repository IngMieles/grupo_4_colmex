<!-- Creación -->
<%- include('./partials/head')  %>
    <body>
        <%- include('./partials/header')  %>
        <main>
            <% if (locals.errors) { %>
              <div class="container" style="background-color: #eb5353;">
                <b>Faltan campos por llenar!!!</b>
              </div>
            <% } %>
            <h2>Crea un nuevo producto</h2>

            <form action="/crearLista" method="post" enctype = "multipart/form-data">

              <div class="container">
                <div class="row">
                    <div class="col-25">
                      <% if (locals.errors) { %>
                        <div class="container" style="background-color: #eb5353;">
                          <b><%= errors[0].msg  %></b>
                      </div>
                      <% } else {%>
                        <label for="name">Nombre <i class="fa-duotone fa-asterisk asterisk"></i></label>
                      <% } %>
                    </div>
                    <div class="col-75">
                      <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Nombre del producto"
                      />
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                      <% if (locals.errors) { %>
                        <div class="container" style="background-color: #eb5353;">
                          <b><%= errors[1].msg  %></b>
                      </div>
                      <% } else {%>
                        <label for="precio">Precio <i class="fa-duotone fa-asterisk asterisk"></i></label>
                      <% } %>
                    </div>
                    <div class="col-75">
                      <input
                        type="number"
                        id="precio"
                        name="precio"
                        placeholder="Precio inicial del producto"
                      />
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                      <label for="img">URL de la imagen</label>
                    </div>
                    <div class="col-75">
                      <input
                        type="url"
                        id="img"
                        name="img"
                        placeholder="Ingresa una URL para la imagen"
                      />
                    </div>
                </div>

                <div class="row">
                  <div class="col-25">
                    <label for="fileImg">Agrega una imagen</label>
                  </div>
                  <div class="col-75">
                    <input
                      type="file"
                      id="fileImg"
                      name="fileImg"
                    />
                  </div>
                </div>

                <div class="row">
                    <div class="col-25">
                      <% if (locals.errors) { %>
                        <div class="container" style="background-color: #eb5353;">
                          <b><%= errors[2].msg  %></b>
                      </div>
                      <% } else {%>
                        <label for="categoria">Categoría <i class="fa-duotone fa-asterisk asterisk"></i></label>
                      <% } %>
                    </div>
                    <div class="col-75">
                      <input
                        type="text"
                        id="categoria"
                        name="categoria"
                        placeholder="Categoría del producto"
                      />
                    </div>
                </div>

                <% if (locals.errors) { %>
                  <div class="container" style="background-color: #eb5353;">
                    <b><%= errors[3].msg  %></b>
                </div>
              <% } %>
                <div class="row">
                    <div class="col-25">
                      <label for="description">Descripción <i class="fa-duotone fa-asterisk asterisk"></i></label>
                    </div>
                    <div class="col-75">
                      <textarea id="description" name="description" placeholder="Descripción general del producto" style="height:200px"></textarea>
                    </div>
                </div>

                <div class="row">
                  <input type="hidden" id="userId" name="userId" value= <%= userID.id %> >
                  <input type="submit" value="Crear" />
              </div>
              </div>
            </form>

        </main>
        <%- include('./partials/footer')  %>
    </body>
</html>