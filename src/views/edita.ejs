<!-- Edita  -->
<%- include('./partials/head')  %>
    <body>
        <%- include('./partials/header')  %>
        <main>
            <h2>Edita tú producto</h2>
            <section>
              <article class="producto">
                <% if (productoImg.fileImg) { %>
                        <img src="/img/products/<%= productoImg.fileImg %>" alt="No image">
                <% } else { %>
                        <img src=<%= productoImg.img %> alt="No image">
                <% } %>
              </article>
              <article class="descripcion">

                  <% if (locals.errors) { %>
                    <% errors.forEach(error => { %>
                      <div class="container" style="background-color: #eb5353;">
                        <b><%= error.msg  %></b>
                    </div>
                    <% }) %>
                  <% } %>

                <form action="/detalleProducto/<%= productoImg.id %>/edita?_method=PUT" method="post">
                  <div class="container">
                      <div class="row">
                        <div class="col-25">
                          <label for="name">Nombre: <%= productoImg.name %> </label>
                        </div>
                        <div class="col-75">
                          <input
                            type="text"
                            id="name"
                            name="name"
                            placeholder="Nuevo nombre del producto"
                          />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-25">
                          <label for="precio">Precio: <%= productoImg.precio %></label>
                        </div>
                        <div class="col-75">
                          <input
                            type="number"
                            id="precio"
                            name="precio"
                            placeholder="Cambia el precio del producto"
                          />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-25">
                          <label for="categoria">Categoría: <%= productoImg.categoria %></label>
                        </div>
                        <div class="col-75">
                          <input
                            type="text"
                            id="categoria"
                            name="categoria"
                            placeholder="Categoría del producto"
                          />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-25">
                          <label for="img">URL</label>
                        </div>
                        <div class="col-75">
                          <input
                            type="url"
                            id="img"
                            name="img"
                            placeholder="Ingresa una URL para la imagen"
                          />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-25">
                          <label for="fileImg">Agrega una imagen</label>
                        </div>
                        <div class="col-75">
                          <input
                            type="file"
                            id="fileImg"
                            name="fileImg"
                          />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-25">
                          <label for="description">Descripción: <%= productoImg.description %></label>
                        </div>
                        <div class="col-75">
                          <textarea id="description" name="description" placeholder="Descripción general del producto" style="height:100px"></textarea>
                        </div>
                      </div>

                      <div class="row">
                        <input type="hidden" id="userId" name="userId" value= <%= productoImg.userId %> >
                        <input type="submit" value="Enviar cambios" />
                      </div>
                  </div>
              </form>
              </article>
            </section>
        </main>
        <%- include('./partials/footer')  %>
    </body>
</html>