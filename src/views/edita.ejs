<!-- Edita  -->
<%- include('./partials/head')  %>
    <body>
        <%- include('./partials/header')  %>
        <main>
            <h2>Edita tú producto</h2>
            <form action="" method="post">
                <div class="container">
                    <div class="row">
                      <div class="col-25">
                        <label for="fname">Nombre</label>
                      </div>
                      <div class="col-75">
                        <input
                          type="text"
                          id="name"
                          name="name"
                          placeholder="Nombre del producto"
                        />
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-25">
                        <label for="lname">Descripción</label>
                      </div>
                      <div class="col-75">
                        <input
                          type="text"
                          id="descripcion"
                          name="descripcion"
                          placeholder="Descripción general del producto"
                        />
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-25">
                        <label for="lname">Precio</label>
                      </div>
                      <div class="col-75">
                        <input
                          type="number"
                          id="precio"
                          name="precio"
                          placeholder="Precio inicial del producto"
                        />
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-25">
                        <label for="lname">URL</label>
                      </div>
                      <div class="col-75">
                        <input
                          type="url"
                          id="url"
                          name="url"
                          placeholder="Ingresa una URL para la imagen"
                        />
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-25">
                        <label for="lname">Categoría</label>
                      </div>
                      <div class="col-75">
                        <input
                          type="text"
                          id="categoria"
                          name="categoria"
                          placeholder="Categoría del producto"
                        />
                      </div>
                    </div>

                </div>
                <div class="row">
                <input type="submit" value="Crear" />
                </div>
            </form>
        </main>
        <%- include('./partials/footer')  %>
    </body>
</html>